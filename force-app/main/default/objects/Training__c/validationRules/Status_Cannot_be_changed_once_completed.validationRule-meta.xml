<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status_Cannot_be_changed_once_completed</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISCHANGED( Course_Status__c ) , ISPICKVAL( Course_Status__c , &apos;Completed&apos;))</errorConditionFormula>
    <errorMessage>Status Cannot be changed once completed</errorMessage>
</ValidationRule>
